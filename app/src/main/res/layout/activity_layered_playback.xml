<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meghanchua.remoteapp.LayeredPlayback">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/menu_playback"
        android:id="@+id/layered_playback"
        android:textSize="30sp"
        android:layout_below="@+id/screen"
        android:layout_toLeftOf="@+id/main_menu"
        android:layout_toStartOf="@+id/main_menu" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout3"
        android:layout_below="@+id/button_down"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp">

        <ImageButton
            android:layout_width="80dip"
            android:layout_height="70dip"
            android:src="@drawable/rewind"
            android:scaleType="fitCenter"
            android:id="@+id/button_rewind"
            android:contentDescription="@string/rewind_text"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="start|end"/>

        <ImageButton
            android:id="@+id/button_pause"
            android:layout_width="80dip"
            android:layout_height="70dip"
            android:layout_column="1"
            android:layout_row="0"
            android:scaleType="fitCenter"
            android:src="@drawable/pause"
            android:contentDescription="@string/pause_text"/>

        <ImageButton
            android:id="@+id/button_forward"
            android:layout_width="80dip"
            android:layout_height="70dip"
            android:layout_column="2"
            android:layout_row="0"
            android:scaleType="fitCenter"
            android:src="@drawable/forward"
            android:layout_gravity="center"
            android:contentDescription="@string/forward_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rewind_text"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pause_text"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forward_text"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"/>

        <ImageButton
            android:layout_width="80dip"
            android:layout_height="70dip"
            android:src="@drawable/stop"
            android:scaleType="fitCenter"
            android:id="@+id/button_stop"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_columnSpan="2"
            android:contentDescription="@string/stop_text"/>

        <ImageButton
            android:layout_width="80dip"
            android:layout_height="70dip"
            android:src="@drawable/play"
            android:scaleType="fitCenter"
            android:id="@+id/button_play"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:contentDescription="@string/play_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_text"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnSpan="2"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_text"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnSpan="2"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"/>

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layered_playback"
        android:layout_toRightOf="@+id/layered_playback"
        android:layout_toEndOf="@+id/layered_playback"
        android:layout_marginTop="45dp"
        android:id="@+id/gridLayout2">

    </GridLayout>

    <Button
        android:id="@+id/button_delete"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_alignLeft="@+id/gridLayout3"
        android:layout_alignStart="@+id/gridLayout3"
        android:layout_below="@+id/gridLayout2"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/record_text"
        android:scaleType="fitCenter"
        android:text="@string/delete_text" />



    <ImageButton
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:src="@drawable/triangle_up"
        android:scaleType="fitCenter"
        android:id="@+id/button_up"
        android:contentDescription="@string/up_text"
        android:layout_alignTop="@+id/gridLayout2"
        android:layout_alignLeft="@+id/button_down"
        android:layout_alignStart="@+id/button_down" />

    <ImageButton
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:src="@drawable/triangle_down"
        android:scaleType="fitCenter"
        android:id="@+id/button_down"
        android:textSize="20sp"
        android:contentDescription="@string/down_text"
        android:layout_below="@+id/button_up"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp" />

    <Button
        android:id="@+id/main_menu"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickMainMenu"
        android:text="@string/menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/help"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickHelp"
        android:text="@string/menu_help"
        android:layout_below="@+id/screen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/back"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickBack"
        android:text="@string/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:text="@string/screen_playback"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</RelativeLayout>
