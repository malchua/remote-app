<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meghanchua.remoteapp.LayeredDesignActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:id="@+id/menu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"/>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="@string/menu_remote"
            android:id="@+id/menu_remote"
            android:width="100dp"
            android:height="20dp"
            android:layout_marginBottom="39dp"
            android:onClick="buttonOnClickRemote"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="50sp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="@string/menu_guide"
            android:id="@+id/menu_guide"
            android:layout_marginBottom="40dp"
            android:width="100dp"
            android:height="20dp"
            android:onClick="buttonOnClickGuide"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="50sp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="@string/menu_playback"
            android:id="@+id/menu_playback"
            android:width="100dp"
            android:height="20dp"
            android:onClick="buttonOnClickPlayback"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="50sp"/>

    </GridLayout>

    <Button
        android:id="@+id/main_menu"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickMainMenu"
        android:text="@string/button_main_menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/help"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickHelp"
        android:text="@string/menu_help" />

    <Button
        android:id="@+id/back"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickBack"
        android:text="@string/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
