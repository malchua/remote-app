<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meghanchua.remoteapp.LayeredDesignActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:id="@+id/menu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_remote"
        android:id="@+id/menu_remote"
        android:width="100dp"
        android:height="20dp"
        android:layout_above="@+id/menu_guide"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_guide"
        android:id="@+id/menu_guide"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/menu_playback"
        android:layout_alignLeft="@+id/menu_remote"
        android:layout_alignStart="@+id/menu_remote"
        android:width="100dp"
        android:height="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_playback"
        android:id="@+id/menu_playback"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/menu_guide"
        android:layout_alignStart="@+id/menu_guide"
        android:width="100dp"
        android:height="20dp" />
</RelativeLayout>
