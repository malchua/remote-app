<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meghanchua.remoteapp.LayeredDesignActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:id="@+id/menu"
        android:textSize="50sp"
        android:layout_below="@+id/screen"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="buttonOnClickMainMenu"
        android:text="@string/menu" />

    <Button
        android:id="@+id/help"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickHelp"
        android:text="@string/menu_help"
        android:layout_below="@+id/screen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/back"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickBack"
        android:text="@string/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/menu_remote"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menu"
        android:layout_marginTop="18dp"
        android:width="100dp"
        android:height="20dp"
        android:onClick="buttonOnClickRemote"
        android:text="@string/menu_remote"
        android:textSize="50sp" />

    <Button
        android:id="@+id/menu_playback"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:width="100dp"
        android:height="20dp"
        android:onClick="buttonOnClickPlayback"
        android:text="@string/menu_playback"
        android:textSize="50sp"
        android:layout_below="@+id/menu_guide"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/menu_guide"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menu_remote"
        android:layout_marginTop="29dp"
        android:width="100dp"
        android:height="20dp"
        android:onClick="buttonOnClickGuide"
        android:text="@string/menu_guide"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:text="On Television"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</RelativeLayout>
