<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meghanchua.remoteapp.LayeredGuide">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/menu_guide"
        android:id="@+id/layered_guide"
        android:textSize="50sp"
        android:layout_below="@+id/screen"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_text"
        android:id="@+id/guide_select"
        android:textSize="30sp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/back"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:src="@drawable/record"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:id="@+id/layered_record"
        android:contentDescription="@string/record_text"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/layered_guide"
        android:layout_toEndOf="@+id/layered_guide" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_text"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/gridLayout4"
        android:layout_alignRight="@+id/layered_record"
        android:layout_alignEnd="@+id/layered_record" />

    <Button
        android:id="@+id/main_menu"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickMainMenu"
        android:text="@string/menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/help"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickHelp"
        android:text="@string/menu_help"
        android:layout_below="@+id/screen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/back"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="buttonOnClickBack"
        android:text="@string/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/triangle_up"
            android:scaleType="fitCenter"
            android:id="@+id/guide_up"
            android:layout_row="0"
            android:layout_column="1"
            android:contentDescription="@string/up_text"/>

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/triangle_down"
            android:scaleType="fitCenter"
            android:id="@+id/guide_down"
            android:layout_row="2"
            android:layout_column="1"
            android:contentDescription="@string/down_text"/>

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/triangle_left"
            android:scaleType="fitCenter"
            android:id="@+id/guide_left"
            android:layout_row="1"
            android:layout_column="0"
            android:contentDescription="@string/left_text"/>

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/triangle_right"
            android:scaleType="fitCenter"
            android:id="@+id/guide_right"
            android:layout_row="1"
            android:layout_column="2"
            android:contentDescription="@string/right_text"/>
    </GridLayout>

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
