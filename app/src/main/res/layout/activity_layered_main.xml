<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meghanchua.remoteapp.LayeredMain">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:text="@string/button1"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="50sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:text="@string/button2"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="50sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:text="@string/button4"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="50sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:text="@string/button5"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="50sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:text="@string/button6"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="50sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:text="@string/button7"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="50sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:text="@string/button8"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="50sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:text="@string/button9"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="50sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:text="@string/button3"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="50sp"/>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_remote"
        android:id="@+id/layered_main_remote"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_power"
        android:id="@+id/button_power"
        android:layout_below="@+id/layered_main_remote"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/up_text"
        android:id="@+id/volume_up"
        android:layout_marginTop="22dp"
        android:textSize="20sp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/button_power"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/down_text"
        android:id="@+id/volume_down"
        android:layout_below="@+id/volume_up"
        android:layout_alignLeft="@+id/volume_up"
        android:layout_alignStart="@+id/volume_up"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/up_text"
        android:id="@+id/channel_up"
        android:layout_alignTop="@+id/volume_up"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/down_text"
        android:id="@+id/channel_down"
        android:layout_alignBottom="@+id/volume_down"
        android:layout_alignLeft="@+id/channel_up"
        android:layout_alignStart="@+id/channel_up"
        android:textSize="20sp"/>

</RelativeLayout>
