<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meghanchua.remoteapp.IphoneDesign2">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_text"
        android:textSize="20sp"
        android:layout_below="@+id/layered_record"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button18"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/back_text"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/button17"
        android:layout_alignBottom="@+id/button17"
        android:layout_alignRight="@+id/gridLayout4"
        android:layout_alignEnd="@+id/gridLayout4" />

    <Button
        android:id="@+id/button17"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/help_text"
        android:onClick="buttonOnClickHelpScreen2"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button11"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/panel_text"
        android:textSize="18sp"
        android:onClick="buttonOnClickIphoneDesign"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button15"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:text="@string/menu_guide"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_above="@+id/gridLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <Button
        android:id="@+id/button16"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="Recorded TV"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/button15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_text"
        android:textSize="30sp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBottom="@+id/button15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button18"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp">

        <ImageButton
            android:id="@+id/button_rewind"
            android:layout_width="80dip"
            android:layout_height="70dip"
            android:layout_column="0"
            android:layout_gravity="start|end"
            android:layout_row="0"
            android:contentDescription="@string/rewind_text"
            android:scaleType="fitCenter"
            android:src="@drawable/rewind" />

        <ImageButton
            android:id="@+id/button_pause"
            android:layout_width="80dip"
            android:layout_height="70dip"
            android:layout_column="1"
            android:layout_row="0"
            android:contentDescription="@string/pause_text"
            android:scaleType="fitCenter"
            android:src="@drawable/pause" />

        <ImageButton
            android:id="@+id/button_forward"
            android:layout_width="80dip"
            android:layout_height="70dip"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="0"
            android:contentDescription="@string/forward_text"
            android:scaleType="fitCenter"
            android:src="@drawable/forward" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_row="1"
            android:text="@string/rewind_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_row="1"
            android:text="@string/pause_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_row="1"
            android:text="@string/forward_text" />

        <ImageButton
            android:id="@+id/button_stop"
            android:layout_width="80dip"
            android:layout_height="70dip"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_row="2"
            android:contentDescription="@string/stop_text"
            android:scaleType="fitCenter"
            android:src="@drawable/stop" />

        <ImageButton
            android:id="@+id/button_play"
            android:layout_width="80dip"
            android:layout_height="70dip"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_row="2"
            android:contentDescription="@string/play_text"
            android:scaleType="fitCenter"
            android:src="@drawable/play" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:layout_row="3"
            android:text="@string/stop_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:layout_row="3"
            android:text="@string/play_text" />

    </GridLayout>

    <ImageButton
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:src="@drawable/record"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:id="@+id/layered_record"
        android:contentDescription="@string/record_text"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/button15"
        android:layout_alignStart="@+id/button15" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout4"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/button17"
        android:layout_alignStart="@+id/button17">

        <ImageButton
            android:id="@+id/guide_up"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="1"
            android:layout_row="0"
            android:contentDescription="@string/up_text"
            android:scaleType="fitCenter"
            android:src="@drawable/triangle_up" />

        <ImageButton
            android:id="@+id/guide_down"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="1"
            android:layout_row="2"
            android:contentDescription="@string/down_text"
            android:scaleType="fitCenter"
            android:src="@drawable/triangle_down" />

        <ImageButton
            android:id="@+id/guide_left"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="0"
            android:layout_row="1"
            android:contentDescription="@string/left_text"
            android:scaleType="fitCenter"
            android:src="@drawable/triangle_left" />

        <ImageButton
            android:id="@+id/guide_right"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="2"
            android:layout_row="1"
            android:contentDescription="@string/right_text"
            android:scaleType="fitCenter"
            android:src="@drawable/triangle_right" />
    </GridLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="30sp"
        android:background="#000000"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
